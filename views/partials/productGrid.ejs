<% productCoverClass = locals.large ? 'product-cover-large' : '' %> <% productGridClass =
locals.large ? 'product-grid-large' : '' %>
<div class="product-grid <%= productGridClass %>">
  <% products.forEach(product => { %>
  <a href="/products/<%= product.id %>">
    <div>
      <p style="text-align: center; font-size: 2rem;"><%= product.title %></p>
      <img class="product-cover <%= productCoverClass %>" src="<%= product.coverImagePath %>" />
    </div>
  </a>
  <% }) %>
</div>