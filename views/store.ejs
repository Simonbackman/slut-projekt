<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="https://checkout.stripe.com/checkout.js" defer></script>
<script>
    var stripePublicKey = '<%= stripePublicKey %>'
</script>
<script src="/javascripts/store.js" defer></script>

<style>
    .activeStore {
        /* background-color: #32383e; */
        background: rgba(51, 48, 48, 0.521);
        text-decoration: underline;
        border-radius: 25px;

    }
</style>
<%- include('./partials/nav.ejs') %>
<a id="btnTop"></a>
<section class="content-section" style="border-bottom-left-radius:0; border-bottom-right-radius:0;">
    <h2 class="section-header mt-4">Products</h2>
    <div class="shop-items">
        <% products.forEach(product => { %>
        <div class="shop-item" data-item-id="<%= product.id %>">
            <span class="shop-item-title"><%= product.title %></span>

            <div class="flip-card">
                <div class="flip-card-inner">
                    <div class="flip-card-front">


                        <img class="shop-item-image" src="<%= product.coverImagePath %>">
                    </div>
                    <div class="flip-card-back">
                        <p><%= product.description %></p>
                    </div>
                </div>
            </div>




            <div class="shop-item-details">
                <span class="shop-item-price">$<%= product.price / 100 %>$</span>
                <button class="btn btn-primary shop-item-button" type="button">ADD TO CART</button>
            </div>
        </div>
        <% }) %>
    </div>
</section>





<section class="content-section" style=" border-top-left-radius: 0; border-top-right-radius:0;">
    <h2 class="section-header">CART</h2>
    <div class="cart-row">
        <span class="cart-item cart-header cart-column">img/titel</span>
        <span class="cart-price cart-header cart-column">PRICE</span>
        <span class="cart-quantity cart-header cart-column">QUANTITY</span>
    </div>
    <div class="cart-items">
    </div>
    <div class="cart-total">
        <strong class="cart-total-title">Total</strong>
        <span class="cart-total-price">$0</span>
    </div>
    <button class="btn btn-primary btn-purchase" type="button">PURCHASE</button>
</section>

<%- include('./partials/footer.ejs') %>


<script>
    var btn = $('#btnTop');

    $(window).scroll(function () {
        if ($(window).scrollTop() > 300) {
            btn.addClass('show');
        } else {
            btn.removeClass('show');
        }
    });

    btn.on('click', function (e) {
        e.preventDefault();
        $('html, body').animate({ scrollTop: 0 }, '300');
    });
</script>