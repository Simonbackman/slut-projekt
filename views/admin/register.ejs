<%- include('../partials/dashboardHeader') %>
<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body" style="border-radius: 85px">
            <h1 class="text-center mb-3">
                <i class="fas fa-user-plus"></i> Register
            </h1>
            <%- include('../partials/messages') %>
            <form action="/admins/register" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
                        value="<%= typeof name != 'undefined' ? name : '' %>" />
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
                        value="<%= typeof email != 'undefined' ? email : '' %>" />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control"
                        placeholder="Create Password" value="<%= typeof password != 'undefined' ? password : '' %>" />
                    <span class="fa fa-fw fa-eye-slash  field_icon toggle-password"></span>
                </div>
                <div class="form-group">
                    <label for="password2">Confirm Password</label>
                    <input type="password" id="password2" name="password2" class="form-control"
                        placeholder="Confirm Password"
                        value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                    <span class="fa fa-fw fa-eye-slash  field_icon toggle-passwordConf"></span>
                </div>
                <p id="demo"></p>
                <button type="submit" class="btn btn-primary btn-block">
                    Register
                </button>
            </form>
            <div class="lead mt-4"></div>
        </div>
    </div>
</div>

<script>
    document.querySelector("#password").addEventListener('keyup', checkCapsLock);
    document.querySelector("#password").addEventListener('mousedown', checkCapsLock);

    document.querySelector("#password2").addEventListener('keyup', checkCapsLock);
    document.querySelector("#password2").addEventListener('mousedown', checkCapsLock);

    function checkCapsLock(e) {
        var caps_lock_on = e.getModifierState('CapsLock');

        if (caps_lock_on == true) {
            // console.log('Caps Lock is turned on');
            document.getElementById("demo").innerHTML = "Caps Lock is turned on";
        }
        else {
            // console.log('Caps Lock is turned off');
            document.getElementById("demo").innerHTML = "";
        }
    };
    $(document).on('click', '.toggle-password', function () {
        $(this).toggleClass("fa-eye fa-eye-slash");

        var inputFirst = $("#password");
        inputFirst.attr('type') === 'password' ? inputFirst.attr('type', 'text') : inputFirst.attr('type', 'password')
    });

    $(document).on('click', '.toggle-passwordConf', function () {

        $(this).toggleClass("fa-eye fa-eye-slash");

        var inputSecond = $("#password2");
        inputSecond.attr('type') === 'password' ? inputSecond.attr('type', 'text') : inputSecond.attr('type', 'password')

    });
</script>

<%- include('../partials/footer.ejs') %>